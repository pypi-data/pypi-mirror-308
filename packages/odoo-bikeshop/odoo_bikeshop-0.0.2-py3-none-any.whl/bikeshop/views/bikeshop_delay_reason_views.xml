<?xml version="1.0"?>
<odoo>
  <record id="bikeshop_delay_reason_action" model="ir.actions.act_window">
    <field name="name">Delay Reason</field>
    <field name="res_model">bikeshop.delay_reason</field>
    <field name="view_mode">list</field>
  </record>

  <record id="bikeshop_delay_reason_view_tree" model="ir.ui.view">
    <field name="name">bikeshop.delay_reason.view.list</field>
    <field name="model">bikeshop.delay_reason</field>
    <field name="arch" type="xml">
      <list string="Reasons" editable="bottom">
        <field name="name"/>
      </list>
    </field>
  </record>
</odoo>
