{% extends "html.j2" %}

{% block header %}

<div class="title">
    <h1>{{title}}</h1>
    <div class="author">{{author}} ï¸± {{date.strftime(date_format or '%Y-%m-%d')}}</div>
</div>

<p>{{description}}</p>

<img src="{{image}}" alt="{{title}}">

{% endblock %}

{% block footer %}

<div class="related">
    {% for r in related %}
    <a class="block" href="{{r.url}}">
        <div class="preview">
            <img src="{{r.image}}" alt="{{r.title}}">
            <h3>{{r.title}}</h3>
            <p>{{r.description}}</p>
        </div>
    </a>
    {% endfor %}
</div>


<script src="https://giscus.app/client.js"
        data-repo="blgit-org/blgit"
        data-repo-id="R_kgDOM5fQ-Q"
        data-category="Announcements"
        data-category-id="DIC_kwDOM5fQ-c4Cjm_h"
        data-mapping="og:title"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="light"
        data-lang="en"
        crossorigin="anonymous"
        async>
</script>

{% endblock %}