{% macro render_table_field(field) %}
{{ field.name.snake }}: Mapped[{{ field.type.python_type }}] = mapped_column({{ field.type.sql_type }}, nullable={{ field.type.nullable }}, index={{ field.index }})
{% endmacro %}

{% macro render_schema_field(field) %}
{{ field.name.snake }}: {{ field.type.python_type }} = Field(
    {% if field.type.nullable %}
        default=None
    {% elif field.type.default != None %}
        default={{ field.type.default }}
    {% endif %}
    )
{% endmacro %}