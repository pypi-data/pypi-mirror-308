
#
#	nft -f one_user_allowed.nft
#

#
#	where "communicator has uid 1000:
#		su - communicator
#

flush ruleset

table inet filter {
	chain input {
		type filter hook input priority 0; policy accept;
	}

	chain forward {
		type filter hook forward priority 0; policy accept;
	}

	chain output {
		type filter hook output priority 0; 
		#policy drop;
		skuid 0 accept;
		#drop;
		
	}
}




