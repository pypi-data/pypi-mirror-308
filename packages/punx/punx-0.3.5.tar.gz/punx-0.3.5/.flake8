[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
    versioneer.py,
    docs/source,
    punx/_version.py,
    punx/ignore_now,
    tests/ignore_now,
    ideas
    dev_*.py

# E501 line too long
# many long lines in python code
# most in documentation
# some in test cases
max-line-length = 115
# TODO: re-enable E501 error
ignore: E226,E231,E402,E501,E741,F401,F403,F811,W503,W504
